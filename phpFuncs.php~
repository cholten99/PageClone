}

// MAIN
// Handle the incoming request - of whatever kind

  $fp = fopen('HelpCache.txt', 'w');
  fwrite($fp, 'Testy');
  fwrite($fp, 'Test');
  fclose($fp);

$func
Number = 0;
$args = array();
If (in_array('funcNumber', $_GET)) {
  funcNumber = $_GET['funcNumber'];
  $args = $_GET;
} else {
  funcNumber = $_POST['funcNumber'];
  $args = $_POST;
}

switch ($funcNumber) {
  case 1:
    // Store incoming help request
    HelpRequest($args);
    break;
  case 2:
    // Call func
    break;
}

